<Window x:Class="Bazy_projekt.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DashboardWindow" Height="700" Width="1200" UseLayoutRounding="True">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Images/bgDashboard.jpg"/>
    </Window.Background>
    <Grid x:Name="panelUzytkownika">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="569*"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="1" Source="Resources/Images/logoZTlem_03.png" Width="219" Stretch="None" Height="63"/>
        <Grid HorizontalAlignment="Left" Height="438" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="270">
            <Image HorizontalAlignment="Center" Height="107" Margin="0,50,0,0" VerticalAlignment="Top" Width="108" Source="Resources/Images/avatarDomyslny_03.png"/>
            <TextBlock Margin="0,22,0,0" TextWrapping="Wrap" Text="Michał56" VerticalAlignment="Top" Width="270" Foreground="White" FontSize="18" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock Margin="0,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Foreground="White" FontSize="18" HorizontalAlignment="Center" TextAlignment="Center"><Run FontSize="12" Language="pl-pl" Text="Saldo: 15.23 zł"/></TextBlock>
            <Image HorizontalAlignment="Center" Height="34" Margin="0,208,0,0" VerticalAlignment="Top" Width="175" Source="Resources/Images/przyciskiDashboard_07.png"/>
            <Image HorizontalAlignment="Center" Height="34" Margin="48,258,48,0" VerticalAlignment="Top" Width="174" Source="Resources/Images/przyciskiDashboard_10.png"/>
            <Image HorizontalAlignment="Center" Height="34" Margin="48,308,48,0" VerticalAlignment="Top" Width="174" Source="Resources/Images/przyciskiDashboard_12.png"/>
        </Grid>
        <Grid x:Name="utwory" HorizontalAlignment="Left" Height="438" Margin="270,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="922"/>
    </Grid>

</Window>
